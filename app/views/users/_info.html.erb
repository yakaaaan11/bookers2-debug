<table class='table'>
  <tr><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th>follows</th>
    <th>
      <%= link_to user_followings_path(user) do %>
        <%= user.following_user.count %>
      <% end %>
    </th>
  </tr>
  <tr>
    <th>followers</th>
    <th>
      <%= link_to user_followers_path(user) do %>
        <%= user.follower_user.count %>
      <% end %>
    </th>
  </tr>
</table>

<div class='row'>
  <% if user == current_user %>
    <%= link_to '',edit_user_path(user),class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_#{user.id}" %>
  <% else %>
    <% if current_user.following?(user) %>
      <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete ,class: 'btn btn-primary'%>
    <% else %>
      <%= link_to "フォローする", user_relationships_path(user.id), method: :post ,class: 'btn btn-success'%>
    <% end %>
  <% end %>
  
  <% unless @user == current_user %>
    <% if (current_user.following?(@user)) && (@user.following?(current_user)) %>
    <!--<=if @isRoom == true %>　これを消すと表示はされるが相互フォロー
    外も対象になる--> 
      <%= link_to "チャットへ", user_room_path %>
    <% else %>
      <%= form_with model: @room, local:true do |f| %>
        <%= fields_for @user_room do |u| %>
          <%= u.hidden_field :user_id, value: @user.id %>
        <% end %>
        <%= f.submit "チャットを始める", class:"btn btn-primary btn-lg" %>
      <% end %>  
    <% end %>
    <!--< end %>-->
  <% end %>
</div>