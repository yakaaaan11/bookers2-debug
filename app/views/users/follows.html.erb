<h2>Follow Users</h2>
<% if @users.exists? %>
<table class='table'>
    <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
        <td><%= user.name %></td>
        <td>
            <p><%= "フォロー数: #{user.follower.count}" %></p>
        </td>
        <td>
            <p><%= "フォロワー数: #{user.followed.count}" %></p>
        </td>
        <td><%= link_to 'Show', user_path(user), class: "user_#{user.id}" %></td>
      </tr>
      <% end %>
    </tbody>
</table>
<% else %>
<p>ユーザーがいません</p>
<% end %>
